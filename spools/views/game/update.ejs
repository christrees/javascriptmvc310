<%
var nextstate;
var editscore;
switch (game['GameState']) {
    case 'JoinGame':
        nextstate = 'StartGame';
        editscore = 'no';
        break;
    case 'StartGame':
        nextstate = 'EndGame';
        editscore = 'yes';
        break;
    case 'EndGame':
        nextstate = 'EndGame';
        editscore = 'no';
        break;
    default:
        nextstate = 'EndGame';
        editscore = 'no';
}
%>
<%if (editscore == 'yes') {%>
<div class="infoSection">
<div class="teamscore">
<div id="heading"><%= game['TeamNameA'] %></div>
<input id="minusbutton" type="button" class="gamescoreminus"/>
<input id="teamscoreedit" type="test" value="<%= game['TeamAScore'] %>" name="TeamAScore" class="gamescore" />
<input id="plusbutton" type="button" class="gamescoreplus"/>
</div>
</div>
<div class="infoSection">
<div class="teamscore">
<div id="heading"><%= game['TeamNameB'] %></div>
<input id="minusbutton" type="button" class="gamescoreminus"/>
<input id="teamscoreedit" type="test" value="<%= game['TeamBScore'] %>" name="TeamBScore" class="gamescore" />
<input id="plusbutton" type="button" class="gamescoreplus"/>
</div>
</div>
<%}%>
<div class="infoSection">
<div id="heading">State: <%= game['GameState'] %></div>
<input type="checkbox" value="<%= nextstate %>" name="GameState"/><%= nextstate %>
</div>
<div class="infoSection">
<input type='submit' value='Update' class='update'/>
<a href='javascript://' class='cancel' <%= game %>>CANCEL</a>
</div>

</div>